:root {
    --mainYellow: rgb(253, 216, 46);
}
html{
    scroll-behavior: smooth;

}
::selection{
    background-color: rgba(253, 216, 46, .6);
}

body {
    background-image: url("./medias/background.png");
    background-repeat: repeat;
    background-size: contain;
    font-family: 'Caveat', cursive;
    overflow-x: hidden;
    margin: 0;
}

main {
    padding: 5% 10%;
}

#landing {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    background: url(./medias/landingImage.jpg);
    background-size: cover;
    background-attachment: fixed;
}
#landing img{
    display: block;
    height: 40%;
    margin: 75px auto;
}

#landing a{
    z-index: 50;
    position: absolute;
    left:50%;
    top:75vh;
    display: block;
    font-family: "Mansalva", cursive;
    width:100px;
    text-align: center;
    font-size: 4em;
    margin: auto;
    transform: translate(-50%,0) rotate(90deg);
    color: var(--mainYellow);
    text-shadow: black 1px 1px 1px, black -1px 1px 1px, black 1px -1px 1px, black -1px -1px 1px;
    line-height: 4em;
    animation: floatBtn 3s infinite ease;
    cursor: pointer;
    transition: .3s;
    text-decoration: none;
}

#landing a:visited{
    text-decoration: none;
    color: var(--mainYellow);
}
    
nav {
    z-index: 100;
    position: sticky;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    width: calc(100%-60px);
    height: auto;
    background: white;
    border-bottom: 5px solid var(--mainYellow);
    font-size: 2em;
    padding: 15px 30px;
}

nav ul {
    display: inline;
    position: absolute;
    right: 0;
}

nav ul a li {
    margin: 0 20px;
    display: inline;
}
nav ul a{
    text-decoration: none;
    color: black;
}

nav h1 {
    display: inline;
}

li:hover {
    position: relative;
}

li:hover::after {
    content: "";
    left: -5%;
    top: 0.25em;
    position: absolute;
    width: 110%;
    height: 1em;
    transform: rotate(-1deg);
    opacity: 0.3;
    border-radius: 0.25em;
    background: var(--mainYellow)
}

li:hover::before {
    content: "";
    left: -5%;
    top: 0.25em;
    position: absolute;
    width: 110%;
    height: 1em;
    transform: rotate(1deg);
    opacity: 0.3;
    border-radius: 0.25em;
    background: var(--mainYellow)
}

.burger-btn {
    position: absolute;
    right: 1em;
    width: 1em;
    font-size: 1em;
    height: 1em;
    margin: 0em .1em;
    opacity: 0;
}

.burger-check {
    pointer-events: none;
    position: absolute;
    right: 1em;
    height: .15em;
    width: 1em;
    margin: .5em .1em;
    background: lightgrey;
    visibility: hidden;
}

.burger-check::before {
    content: "";
    background: lightgrey;
    height: .15em;
    display: inline-block;
    width: 1em;
    position: absolute;
    margin: -.3em 0;
}

.burger-check::after {
    content: "";
    background: lightgrey;
    height: .15em;
    display: inline-block;
    width: 1em;
    position: absolute;
    margin: .3em 0;
}

.burger-btn:checked~.burger-check {
    background: transparent;
}

.burger-btn:checked~.burger-check::before {
    transform: rotate(45deg);
    margin: 0;
}

.burger-btn:checked~.burger-check::after {
    transform: rotate(-45deg);
    margin: 0;
}

.burger-btn:checked~ul {
    transform: translate(-100%);
}

h1 {
    font-weight: bold;
    text-align: center;
    font-size: xx-large;
    margin-top: 25px;
}

hr {
    width: 15%;
    min-width: 200px;
    height: 5px;
    background-color: var(--mainYellow);
    border-radius: 5px;
    border: 1px dashed black;
    margin-bottom: 25px;
}

.texte {
    width: 50%;

}

h2 {
    font-size: x-large;
    color: var(--mainYellow);
    font-weight: bold;
    margin: 0 0 20px 0;
}

h5{
    text-align: center;
    font-weight: bold;
    font-size: 3em;
    color:#1C2704

}
article img, article div{
    height: 500px;
    display: inline;
    margin: 0 50px -100px 0;
}

article img{
    box-shadow: black 0px 0px 20px;
}

h2{
    text-shadow: black 1px 1px 1px, black -1px 1px 1px, black 1px -1px 1px, black -1px -1px 1px;
}

#article2{
    text-align: right;
}

#imgArticle1,
.texte,
#imgArticle2 {
    display: inline-block;
    vertical-align: middle;
}
#bio{
    display: block;
    text-align: center;
}
#bio img{
    width: 50%;
}
#h2Evenement,
#pEvenement {
    text-align: center;
}


p{
    font-size:2em;
}
/************************************************************/
/*                        FORM                              */
/************************************************************/
#form {
    margin: 0 15% 0 15%;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
    
}
form input {
    height: 40px;
    border:2px solid var(--mainYellow)
}
#email, select{
    width:100%;
}
input::placeholder, select, input{
    font-family: 'Caveat', cursive;
    font-size: 1.3em;
} 
#nom, #prenom, #email, #telephone, select{
    margin-bottom: 50px;
    min-width: 350px;
    width: 50%;
}

#validation{
    display: block;
    text-align: center;
    height: 30px;
}

#validation input{
    height: 30px;
    padding: 0;
    margin:0;
}
select{
    height: 50px;
    border:2px solid var(--mainYellow);
}
#validation label{
    font-size: 25px;
    vertical-align: top;
}

input[type="submit"]{
    margin: 0 auto;
    background-color: var(--mainYellow);
    font-weight: bold;
    color:black;
    font-size: x-large;
    width: max-content;
    padding: 0 30px;
    height: 50px;
    line-height: 50px;
    border: 2px solid var(--mainYellow);
    transition: .3s; 
}

input[type="submit"]:hover{
    border: 2px solid black;
}

/************************************************************/
/*                         CARTE                            */
/************************************************************/
.bouttonInscription{
    display: block;
    margin: 0 auto;
    text-decoration: none;
    background-color: var(--mainYellow);
    font-weight: bold;
    color:black;
    font-size: x-large;
    width: max-content;
}

#carte {
    display: block;
    text-align: center;
}

.button {
    line-height: 45px;
    vertical-align: center;
    text-align: center;
    padding:10px 50px;
    border: 2px solid var(--mainYellow);
    box-sizing: border-box;
    transition: .3s;
}
.button:hover{
    border: 2px solid black;
}
iframe{
    margin: 30px;
    clip-path: polygon(0 11.5%, 100% 11.5%, 100% 100%, 0% 100%);
}

/************************************************************/
/*                        FOOTER                            */
/************************************************************/
footer{
    display: block;
    background-color: var(--mainYellow);
    text-align: center;
    height: 40px;
    padding:10px;
}

footer img {
    display: inline-block;
    width: 40px;
    height: 40px;
    margin:0 10px;
}
footer a{
    height: 40px;
}
/************************************************************/
/*                                                          */
/************************************************************/
@media screen and (max-width: 768px) {
    .burger-check {
        visibility: visible;
    }
    nav ul li {
        display: block;
        margin: 0;
        padding: 0;
        text-align: center;
    }
    nav ul {
        all: unset;
        height: calc(100vh - 1em - 12px);
        background: white;
        position: absolute;
        padding: 0;
        margin: calc(1em - 12px) 0;
        left: 100%;
        width: 80%;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        text-align: center;
    }
    nav ul li a:hover {
        position: relative;
    }
    nav ul li a:hover:before {
        content: "";
        left: -5%;
        top: 0.25em;
        position: absolute;
        width: 110%;
        height: 1em;
        transform: rotate(1deg);
        opacity: 0.3;
        border-radius: 0.25em;
        background: var(--mainYellow)
    }
    nav ul li a:hover:after {
        content: "";
        left: -5%;
        top: 0.25em;
        position: absolute;
        width: 110%;
        height: 1em;
        transform: rotate(-1deg);
        opacity: 0.3;
        border-radius: 0.25em;
        background: var(--mainYellow)
    }
    article {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
    }
    article .texte{
        height:auto;
        width:80%;
        margin:50px 10%;
        text-align: center;
        padding:0;
    }
    article img{
        float: none;
        width: 100%;
        margin: 0;
        padding: 0;
    }
    #article2{
        flex-direction: column-reverse;
    }
    iframe{
        width:90%;
    }
    h5{
        width: 80%;
        margin:auto;
        font-size: 2.5em;
    }
}




/************************************************************/
/*                        ANIMATIONS                        */
/************************************************************/
@keyframes floatBtn{
    0%{
        transform:rotate(90deg) translate(-15px,25px); 
    }
    50%{
        transform:rotate(90deg) translate(15px,25px); 
    }
    100%{
        transform:rotate(90deg) translate(-15px,25px); 
    }
}